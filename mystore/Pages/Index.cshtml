@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f9f1f5; /* Soft cream color */
            margin: 0;
            padding: 0;
            color: #333;
        }

        .header-section {
            background-color: #f8d1d4; /* Light pink */
            color: white;
            padding: 80px 0;
            text-align: center;
            border-bottom: 3px solid #f1a8b3;
        }

            .header-section h1 {
                font-size: 3.5em;
                margin-bottom: 20px;
                font-weight: bold;
            }

            .header-section p {
                font-size: 1.4em;
                margin-top: 10px;
                font-weight: lighter;
            }

        .btn-learn-more {
            margin-top: 30px;
            padding: 12px 30px;
            font-size: 1.2em;
            background-color: #ff7f50; /* Coral color */
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: background-color 0.3s;
        }

            .btn-learn-more:hover {
                background-color: #e06e42;
            }

        .about-us {
            background-color: white;
            padding: 60px 0;
            text-align: center;
            color: #333;
        }

            .about-us h2 {
                font-size: 2.5em;
                margin-bottom: 20px;
                font-weight: bold;
            }

            .about-us p {
                font-size: 1.1em;
                color: #666;
                line-height: 1.6;
                max-width: 900px;
                margin: 0 auto;
                margin-bottom: 30px;
            }

            .about-us img {
                max-width: 100%;
                height: auto;
                border-radius: 10px;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            }

        .carousel-item img {
            width: 100%;
            height: 450px;
            object-fit: cover;
            border-radius: 10px;
        }

        .footer {
            background-color: #f8d1d4; /* Matching pink footer */
            color: white;
            text-align: center;
            padding: 20px;
            position: absolute;
            bottom: 0;
            width: 100%;
        }

        .content {
            text-align: center;
            margin-top: 50px;
        }

            .content h2 {
                font-size: 2.5em;
                color: #333;
                margin-bottom: 20px;
            }

            .content p {
                font-size: 1.1em;
                color: #666;
                line-height: 1.6;
                max-width: 800px;
                margin: 0 auto;
            }
    </style>
</head>
<body>

    <div class="header-section">
        <h1>Welcome to Our Bookstore</h1>
        <p>Your one-stop shop for books of every genre. Find your next great read today!</p>
        <a href="https://learn.microsoft.com/aspnet/core" target="_blank">
            <button class="btn-learn-more">Learn More</button>
        </a>
    </div>

    <!-- Book Carousel (Slider) -->
    <div id="bookCarousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://scholarlykitchen.sspnet.org/wp-content/uploads/2018/07/iStock-506432952.jpg" alt="Book 1">
            </div>
            <div class="carousel-item">
                <img src="https://insidesources.com/wp-content/uploads/2014/06/bigstock-A-pile-of-books-with-library-o-54563726.jpg" alt="Book 2">
            </div>
            <div class="carousel-item">
                <img src="https://images.pexels.com/photos/1387022/pexels-photo-1387022.jpeg?cs=srgb&dl=book-aesthetic-books-old-books-open-books-1387022.jpg&fm=jpg" alt="Book 3">
            </div>
        </div>
        <a class="carousel-control-prev" href="#bookCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#bookCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <!-- About Us Section -->
    <div class="about-us">
        <h2>About Us</h2>
        <p>At our bookstore, we believe that every book has the power to change lives. Whether you're searching for your next great read or a gift for a loved one, we offer a curated collection of the finest books from around the world. Our mission is simple: to share the joy of reading with everyone.</p>
        <img src="https://th.bing.com/th/id/R.bb28b54399761fc65ff403c94299497d?rik=1NEC4UndQdaaqw&riu=http%3a%2f%2fwww.zastavki.com%2fpictures%2foriginals%2f2014%2fCreative_Wallpaper_Stack_of_books_on_the_bench_082401_.jpg&ehk=uia0wBMuDRBSjo12VEn3TJvW6d2oN7ye2qe%2fm5nIywo%3d&risl=&pid=ImgRaw&r=0" alt="Bookshelf">
    </div>

    <div class="content">
        <h2>Browse Our Collection</h2>
        <p>We offer a vast collection of books across different categories. Whether you love fiction, non-fiction, self-help, or mystery, we have something for everyone. Discover the perfect book for you today!</p>
    </div>

    <footer class="footer">
        <p>&copy; 2024 Bookstore Inc. | All rights reserved</p>
    </footer>

    <!-- JavaScript files placed correctly -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
